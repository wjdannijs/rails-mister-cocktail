<div class="container">
  <div class= "row" id="title">
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class="row">
    <ol>
      <div class="col-xs-12 col-md-6" id="cocktail_img">
        <% if @cocktail.cocktail_photo? %>
          <%= cl_image_tag @cocktail.cocktail_photo, height: 300, width: 400, crop: :fill %>
        <% else %>
          <%= render 'image_upload' %>
        <% end %>
      </div>
      <div class="col-xs-12 col-md-6">
        <h3>Ingredients</h3>
        <br>
        <ul>
          <% @doses.each do |dose| %>
            <li> <%= dose.description %> -- <%= dose.ingredient.name %> </li>
          <% end %>
        </ul>
        <br>
        <hr>
          <%= render 'doses/form' %>
      </div>
    </ol>
  </div>
</div>
